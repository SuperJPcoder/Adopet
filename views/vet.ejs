<script>
// JavaScript for scroll animation
window.addEventListener('scroll', function() {
    const scrollText = document.querySelectorAll('.scroll-text')[1]; // Targeting the second text box
    const position = scrollText.getBoundingClientRect().top;
    const screenHeight = window.innerHeight;
    if (position < screenHeight * 0.95) {
        scrollText.classList.add('appear');
        setTimeout(() => {
            const allScrollTexts = document.querySelectorAll('.scroll-text');
            allScrollTexts.forEach((text, index) => {
                if (index === 0) { // First text box
                    setTimeout(() => {
                        text.classList.add('appear');
                    }, 250); // Delay the appearance by 250 ms
                } else if (index === 2) { // Third text box
                    setTimeout(() => {
                        text.classList.add('appear');
                    }, 500); // Delay the appearance by 500 ms
                }
            });
        }, 250); // Trigger after 1 second
    }
});
